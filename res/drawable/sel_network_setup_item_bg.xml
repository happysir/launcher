<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#2cA137"
                android:dashWidth="0dp"
                android:dashGap="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <solid android:color="#48C253"/>
        </shape>
    </item>
</selector>