<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/progressbar_item_image_id"
        android:layout_width="@dimen/album_progressBar_width"
        android:layout_height="@dimen/album_progressBar_height"
        android:src="@drawable/app_loading" />

    <TextView
        android:id="@+id/progressbar_tagtext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/progressbar_item_image_id"
        android:layout_marginBottom="@dimen/album_progressBar_tagtext_marginbottom"
        android:layout_marginLeft="@dimen/album_progressBar_tagtext_marginleft"
        android:layout_toRightOf="@id/progressbar_item_image_id"
        android:textColor="#fff1f1f1"
        android:textSize="@dimen/result_nothing_text_size" />

</RelativeLayout>